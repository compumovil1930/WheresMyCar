<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ratatouille">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".EscogerRecetaActivity"></activity>
        <activity android:name=".EscogerTipoActivity" />
        <activity android:name=".ServicioAceptadoChef" />
        <activity android:name=".ResumenServicioPedido" />
        <activity android:name=".PaymentMethodActivity" />
        <activity android:name=".CommensalRateActivity" />
        <activity android:name=".PreparandoComensalActivity" />
        <activity
            android:name=".mapaTipoServicio"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".TerminadoComensalActivity" />
        <activity
            android:name=".MapServiceAvailableActivity"
            android:label="@string/title_activity_map_service_available" />
        <activity android:name=".ChefRatingActivity" />
        <activity android:name=".mapaServicio" />
        <activity
            android:name=".mapaDireccion"
