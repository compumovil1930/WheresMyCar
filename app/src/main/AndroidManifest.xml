        <activity android:name=".ChefFormActivity" />
        <activity android:name=".HistoryServiceActivity" />
        <activity android:name=".UpdateUserProfileActivity" />
        <activity android:name=".TerminadoChefActivity" />
        <activity android:name=".PreparandoChefActivity" />
        <activity
            android:name=".RegisterActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PayMethods" />
        <activity android:name=".AddPayMethod" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

</manifest>