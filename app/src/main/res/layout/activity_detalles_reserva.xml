<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".DetallesReservaActivity">

    <TextView
        android:id="@+id/textViewNombreRest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text='Estás realizando una reserva en el restaurante "X"'
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/editTextFechaReserva"
        android:layout_width="377dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:drawableLeft="@android:drawable/ic_menu_my_calendar"
        android:ems="10"
        android:gravity="center|left"
        android:hint="Fecha de reserva: 01/01/0001"
        android:inputType="date"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/secondary_text_dark"
        android:textColorHighlight="@android:color/secondary_text_dark"
        android:textColorHint="@color/common_google_signin_btn_text_light_pressed"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewNombreRest" />

    <TextView
        android:id="@+id/textViewHoraMisReserva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Hora de la reserva: 0:0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextFechaReserva" />

    <Button
        android:id="@+id/buttonTerminarReserva"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:text="Realizar reserva"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextAsistentes"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Número de asistentes"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewHoraMisReserva" />
</androidx.constraintlayout.widget.ConstraintLayout>